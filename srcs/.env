# ---------- Project ----------
COMPOSE_PROJECT_NAME=inception
DOMAIN_NAME=oiskanda.42.fr
TZ=Asia/Beirut

# ---------- Host bind paths (as required by subject) ----------
HOST_DB_PATH=/home/oiskanda/data/db
HOST_WP_PATH=/home/oiskanda/data/wp

# ---------- Network ----------
INCEPTION_NET=inception_net

# ---------- MariaDB ----------
MYSQL_HOST=mariadb
MYSQL_PORT=3306
MYSQL_DATABASE=wordpress
MYSQL_USER=wp_user
# secrets are mounted at /run/secrets/<name>
MYSQL_PASSWORD_FILE=/run/secrets/db_password
MYSQL_ROOT_PASSWORD_FILE=/run/secrets/db_root_password

# ---------- WordPress / PHP-FPM ----------
WP_TITLE="Oiskanda Blog"
WP_URL=https://oiskanda.42.fr

# Admin username MUST NOT contain 'admin' (per subject)
WP_ADMIN_USER=siteowner
WP_ADMIN_EMAIL=owner@gmail.com
WP_ADMIN_PASSWORD_FILE=/run/secrets/wp_admin_password

# Regular user (non-admin) to satisfy "two users" rule
WP_USER=wpuser
WP_USER_EMAIL=wpuser@gmail.com
WP_USER_PASSWORD_FILE=/run/secrets/wp_user_password

PHP_FPM_PORT=9000

# ---------- NGINX / TLS ----------
# These are paths INSIDE the nginx container (we'll mount/generate them)
SSL_CERT_PATH=/etc/nginx/ssl/oiskanda.crt
SSL_KEY_PATH=/etc/nginx/ssl/oiskanda.key
